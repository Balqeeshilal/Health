    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ph"
    android:layout_height="match_parent"
    tools:context=".PharmaceuticalActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pharmaceutical"
        android:textStyle="bold"
        android:textColor="#97883636"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textSize="45dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Helps you choose the right medication for your disease."
        android:textColor="#AD040303"
        android:textAlignment="center"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on it, to see more about it..."
        android:textColor="#FCFF0101"
        android:textAlignment="center"
        android:textSize="18dp"/>


    <TextView
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="((Read more about the medicine that helps your problem or consult Your own doctor))."
