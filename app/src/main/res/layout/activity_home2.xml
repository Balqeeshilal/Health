<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/q"
    tools:context=".HomeActivity2">

    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose what you are looking for .."
        android:textAlignment="center"
        android:textColor="#CE000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.040"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/layout_border"
        android:backgroundTint="#75F9FAF9"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/d" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctors"
                android:textColor="#EC2026"
                android:textSize="22dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:text="Choose your own doctor."
                android:textColor="@color/black"
                android:textSize="14dp" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/drbutton1"
            android:backgroundTint="#a29088"
            android:layout_width="74dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:text="Enter"
            android:textSize="11dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_border"
        android:backgroundTint="#75F9FAF9"
        android:orientation="horizontal"
        android:padding="6dp" >

        <ImageView
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/img_1"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Hospitals"
                android:textColor="#EC2026"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="208dp"
                android:layout_height="78dp"
                android:text="Choose the hospital ."
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/drbutton2"
            android:backgroundTint="#a29088"
            android:layout_width="74dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:text="Enter"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_border"
        android:backgroundTint="#75F9FAF9"
        android:orientation="horizontal"
        android:padding="6dp" >

        <ImageView
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/img_4"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:text="Illnesses"
                android:textColor="#EC2026"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="218dp"
                android:layout_height="78dp"
                android:text="Learn about various diseases"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/drbutton3"
            android:backgroundTint="#a29088"
            android:layout_width="74dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:text="Enter"
            android:textSize="11dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_border"
        android:backgroundTint="#75F9FAF9"
        android:orientation="horizontal"
        android:padding="6dp" >

        <ImageView
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/img_2"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:text="Pharmaceutical"
                android:textColor="#EC2026"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="195dp"
                android:layout_height="78dp"
                android:text="Medication for your disease."
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/drbutton4"
            android:backgroundTint="#a29088"
            android:layout_width="74dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:text="Enter"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_border"
        android:backgroundTint="#75F9FAF9"
        android:orientation="horizontal"
        android:padding="6dp" >

        <ImageView
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/img_3"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="174dp"
                android:layout_height="match_parent"
                android:text="Health Summary"
                android:textColor="#EC2026"
                android:textSize="21dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="199dp"
                android:layout_height="78dp"
                android:text=" keep your health data ."
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <Button
            android:id="@+id/drbutton5"
            android:backgroundTint="#a29088"
            android:layout_width="74dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            android:text="Enter"
            android:textSize="11dp" />
    </LinearLayout>

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:backgroundTint="#a29088"
        android:text="Log Out"
        android:textColor="#EC2026"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />



</LinearLayout>